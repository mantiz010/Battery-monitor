{
  "name": "MDI Battery Add-on (S6 Fixed)",
  "slug": "mdi_battery_addon",
  "version": "1.0.0",
  "description": "Full battery add-on using s6 services, PEP 668 override, no more pid1 errors.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "HA_URL": "ws://172.168.1.8:8123/api/websocket",
    "HA_TOKEN": "",
    "ENTITIES": ["sensor.my_phone_battery", "sensor.door_lock_battery"],
    "BATTERY_THRESHOLD": 20.0,
    "UNRESPONSIVE_MINUTES": 30,
    "NOTIFY_SERVICE": "notify.notify"
  },
  "schema": {
    "HA_URL": "str",
    "HA_TOKEN": "str",
    "ENTITIES": ["str"],
    "BATTERY_THRESHOLD": "float",
    "UNRESPONSIVE_MINUTES": "int",
    "NOTIFY_SERVICE": "str"
  },
  "ingress": true,
  "ingress_port": 5000
}
